# Master Pods Repo
source 'https://github.com/CocoaPods/Specs.git'

# Private Pods Repo
source 'git@bitbucket.org:thedistance/thedistancekit-cocoapods.git'

# pod configuration
platform :ios, '8.0'
inhibit_all_warnings!
use_frameworks!

# define
workspace '../<#workspace#>'
project '../<#project#>'

target '<#target#>' do

    ### DISTRIBUTION PODS ###
    pod 'TheDistanceCore'
    pod 'TheDistanceComponents'
    pod 'GoogleAnalytics'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'Firebase/Core'
    pod 'SwiftLint'
    #pod 'EZSwiftExtensions' Waiting for Swift 4 support
    pod 'Alamofire'
    pod 'Parse'

end

# Google Analytics needs to be linked to the testing target otherwise there is an error with the Bridging-Header
target '<#target#>Tests' do

    pod 'GoogleAnalytics'
end