# Master Pods Repo
source 'https://github.com/CocoaPods/Specs.git'

# Private Pods Repo
source 'git@bitbucket.org:thedistance/thedistancekit-cocoapods.git'

# pod configuration
platform :ios, '8.0'
inhibit_all_warnings!
use_frameworks!

# define
workspace '../Jifflr-iOS.xcworkspace'
project '../Jifflr-iOS.xcodeproj'

target 'Jifflr-iOS' do

    ### DISTRIBUTION PODS ###
    pod 'TheDistanceCore'
    pod 'TheDistanceComponents'
    pod 'GoogleAnalytics'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'Firebase/Core'
    pod 'SwiftLint'
    #pod 'EZSwiftExtensions' Waiting for Swift 4 support
    pod 'Alamofire'
    pod 'Parse'
    pod 'Google-Mobile-Ads-SDK'
    pod 'Localize-Swift'
end

# Google Analytics needs to be linked to the testing target otherwise there is an error with the Bridging-Header
target 'Jifflr-iOSTests' do
    inherit! :search_paths
    pod 'Firebase'
    pod 'GoogleAnalytics'
    pod 'Parse'
end
